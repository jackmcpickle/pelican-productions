---
import Button from '@/components/ui/Button.astro';

interface Props {
    title: string;
    subtitle: string;
    image: string;
    cta: {
        label: string;
        href: string;
    };
}

const { title, subtitle, image, cta } = Astro.props;
---

<section class="relative overflow-hidden bg-slate-900 text-white">
    <img
        src={image}
        alt=""
        class="absolute inset-0 h-full w-full object-cover opacity-40"
    />
    <div
        class="relative mx-auto flex w-full max-w-6xl flex-col gap-6 px-6 py-20"
    >
        <p class="text-sm tracking-[0.2em] text-slate-200 uppercase">
            Pelican Productions
        </p>
        <h1 class="text-4xl font-semibold md:text-6xl">{title}</h1>
        <p class="max-w-2xl text-base text-slate-200 md:text-lg">{subtitle}</p>
        <div>
            <Button href={cta.href}>{cta.label}</Button>
        </div>
    </div>
</section>
