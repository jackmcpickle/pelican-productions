---
interface Props {
  title?: string;
  subtitle?: string;
}

const { title, subtitle } = Astro.props;
---

<section class="py-12">
  <div class="mx-auto w-full max-w-6xl px-6">
    {(title || subtitle) && (
      <div class="mb-6 max-w-3xl">
        {title && <h2 class="text-2xl font-semibold text-slate-900">{title}</h2>}
        {subtitle && <p class="mt-2 text-sm text-slate-600">{subtitle}</p>}
      </div>
    )}
    <slot />
  </div>
</section>
