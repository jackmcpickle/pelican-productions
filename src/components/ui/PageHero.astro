---
interface Props {
    title: string;
    subtitle?: string;
    image?: string;
}

const { title, subtitle, image } = Astro.props;
---

<section class="relative overflow-hidden bg-slate-900 text-white">
    {
        image && (
            <img
                src={image}
                alt=""
                class="absolute inset-0 h-full w-full object-cover opacity-40"
                loading="eager"
            />
        )
    }
    <div
        class="relative mx-auto flex w-full max-w-6xl flex-col gap-4 px-6 py-16"
    >
        <p class="text-sm tracking-[0.2em] text-slate-200 uppercase">
            Pelican Productions
        </p>
        <h1 class="text-3xl font-semibold md:text-5xl">{title}</h1>
        {
            subtitle && (
                <p class="max-w-2xl text-base text-slate-200 md:text-lg">
                    {subtitle}
                </p>
            )
        }
    </div>
</section>
