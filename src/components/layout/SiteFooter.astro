---
import { footerMenu, quickLinks, siteInfo, socialLinks } from '@/data/site';
import YouTubeIcon from '@/components/icons/YouTubeIcon.astro';
import FacebookIcon from '@/components/icons/FacebookIcon.astro';
---

<footer class="border-t border-slate-200 bg-white">
    <div
        class="mx-auto grid w-full max-w-6xl gap-10 px-6 py-12 md:grid-cols-[2fr_1fr_1fr_1fr]"
    >
        <div>
            <p class="text-lg font-semibold text-slate-900">{siteInfo.name}</p>
            <p class="mt-2 text-sm text-slate-600">{siteInfo.tagline}</p>
            <div class="mt-4 space-y-1 text-sm text-slate-600">
                <p>Phone: {siteInfo.phone}</p>
                <p>Email: {siteInfo.email}</p>
                <p>{siteInfo.address}</p>
            </div>
        </div>
        <div>
            <p class="text-sm font-semibold text-slate-900">Menu</p>
            <ul class="mt-3 space-y-2 text-sm text-slate-600">
                {
                    footerMenu.map(item => (
                        <li>
                            <a
                                class="transition hover:text-slate-900"
                                href={item.href}
                            >
                                {item.label}
                            </a>
                        </li>
                    ))
                }
            </ul>
        </div>
        <div>
            <p class="text-sm font-semibold text-slate-900">Quick Links</p>
            <ul class="mt-3 space-y-2 text-sm text-slate-600">
                {
                    quickLinks.map(item => (
                        <li>
                            <a
                                class="transition hover:text-slate-900"
                                href={item.href}
                            >
                                {item.label}
                            </a>
                        </li>
                    ))
                }
            </ul>
        </div>
        <div>
            <p class="text-sm font-semibold text-slate-900">Social</p>
            <div class="mt-3 flex gap-3">
                {
                    socialLinks.map(link => (
                        <a
                            class="text-slate-600 transition hover:text-slate-900"
                            href={link.href}
                            target="_blank"
                            rel="noreferrer"
                            aria-label={link.label}
                        >
                            {link.label === 'YouTube' && <YouTubeIcon />}
                            {link.label === 'Facebook' && <FacebookIcon />}
                        </a>
                    ))
                }
            </div>
        </div>
    </div>
    <div
        class="border-t border-slate-200 py-4 text-center text-xs text-slate-500"
    >
        &copy; {new Date().getFullYear()}
        {siteInfo.name}. All rights reserved.
    </div>
</footer>
