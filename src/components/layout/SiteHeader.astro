---
import { navigation, siteInfo, socialLinks } from '@/data/site';
import YouTubeIcon from '@/components/icons/YouTubeIcon.astro';
import FacebookIcon from '@/components/icons/FacebookIcon.astro';
---

<header class="bg-primary backdrop-blur">
    <div
        class="mx-auto flex w-full max-w-6xl items-center justify-between gap-6 px-6 py-4"
    >
        <a
            href="/"
            class="flex items-center gap-3"
        >
            <img
                src="/images/logo.svg"
                alt={siteInfo.name}
                class="h-10 w-auto md:h-12"
                loading="eager"
                decoding="async"
            />
            <span class="sr-only">{siteInfo.name}</span>
        </a>
        <nav
            class="text-navy hidden items-center gap-6 text-sm font-semibold md:flex"
        >
            {
                navigation.map(item => (
                    <a
                        class="hover:text-teritary text-white transition"
                        href={item.href}
                    >
                        {item.label}
                    </a>
                ))
            }
        </nav>
        <div class="flex items-center gap-3">
            {
                socialLinks.map(link => (
                    <a
                        class="hover:text-teritary text-white transition"
                        href={link.href}
                        target="_blank"
                        rel="noreferrer"
                        aria-label={link.label}
                    >
                        {link.label === 'YouTube' && <YouTubeIcon />}
                        {link.label === 'Facebook' && <FacebookIcon />}
                    </a>
                ))
            }
        </div>
    </div>
    <div class="bg-white md:hidden">
        <div
            class="text-navy mx-auto flex w-full max-w-6xl flex-wrap gap-4 px-6 py-3 text-xs font-semibold"
        >
            {
                navigation.map(item => (
                    <a
                        class="hover:text-primary transition"
                        href={item.href}
                    >
                        {item.label}
                    </a>
                ))
            }
        </div>
    </div>
</header>
