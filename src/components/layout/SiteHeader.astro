---
import { navigation, siteInfo, socialLinks } from '@/data/site';
---

<header class="border-b border-slate-200 bg-white/90 backdrop-blur">
  <div class="mx-auto flex w-full max-w-6xl items-center justify-between gap-6 px-6 py-4">
    <a href="/" class="text-xl font-semibold tracking-tight text-slate-900">
      {siteInfo.name}
    </a>
    <nav class="hidden items-center gap-6 text-sm font-medium text-slate-600 md:flex">
      {navigation.map((item) => (
        <a class="transition hover:text-slate-900" href={item.href}>
          {item.label}
        </a>
      ))}
    </nav>
    <div class="hidden items-center gap-3 md:flex">
      {socialLinks.map((link) => (
        <a
          class="text-xs font-semibold uppercase tracking-wide text-slate-500 transition hover:text-slate-900"
          href={link.href}
          target="_blank"
          rel="noreferrer"
        >
          {link.label}
        </a>
      ))}
    </div>
  </div>
  <div class="border-t border-slate-100 bg-white md:hidden">
    <div class="mx-auto flex w-full max-w-6xl flex-wrap gap-4 px-6 py-3 text-xs font-medium text-slate-600">
      {navigation.map((item) => (
        <a class="transition hover:text-slate-900" href={item.href}>
          {item.label}
        </a>
      ))}
    </div>
  </div>
</header>
