---
interface Member {
  name: string;
  role: string;
  credentials?: string[];
  image: string;
}

interface TeamGroup {
  title: string;
  members: Member[];
}

interface Props {
  groups: TeamGroup[];
}

const { groups } = Astro.props;
---

<div class="space-y-10">
  {groups.map((group) => (
    <div>
      <h3 class="text-lg font-semibold text-slate-900">{group.title}</h3>
      <div class="mt-4 grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
        {group.members.map((member) => (
          <div class="rounded-2xl border border-slate-200 bg-white p-5 text-center shadow-sm">
            <img
              src={member.image}
              alt={member.name}
              class="mx-auto h-40 w-32 rounded-xl object-cover"
              loading="lazy"
            />
            <p class="mt-4 text-sm font-semibold text-slate-900">{member.name}</p>
            <p class="text-xs text-slate-500">{member.role}</p>
            {member.credentials && (
              <ul class="mt-3 space-y-1 text-xs text-slate-600">
                {member.credentials.map((credential) => (
                  <li>{credential}</li>
                ))}
              </ul>
            )}
          </div>
        ))}
      </div>
    </div>
  ))}
</div>
