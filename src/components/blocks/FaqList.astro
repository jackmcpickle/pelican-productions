---
interface FaqItem {
    question: string;
    answer: string;
}

interface Props {
    items: FaqItem[];
}

const { items } = Astro.props;
---

<div class="space-y-4">
    {
        items.map(item => (
            <details class="rounded-2xl border border-slate-200 bg-white p-5 shadow-sm">
                <summary class="cursor-pointer text-base font-semibold text-slate-900">
                    {item.question}
                </summary>
                <p class="mt-3 text-sm text-slate-600">{item.answer}</p>
            </details>
        ))
    }
</div>
