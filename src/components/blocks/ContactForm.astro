---
interface Props {
  heading?: string;
  description?: string;
}

const { heading = 'Send us a message', description } = Astro.props;
---

<div class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
  <div class="mb-6">
    <h2 class="text-xl font-semibold text-slate-900">{heading}</h2>
    {description && <p class="mt-2 text-sm text-slate-600">{description}</p>}
  </div>
  <form class="space-y-4" method="post" action="/api/contact">
    <div class="grid gap-4 md:grid-cols-2">
      <label class="text-sm text-slate-600">
        Name
        <input
          class="mt-2 w-full rounded-lg border-slate-200"
          type="text"
          name="name"
          required
          placeholder="Your name"
        />
      </label>
      <label class="text-sm text-slate-600">
        Email
        <input
          class="mt-2 w-full rounded-lg border-slate-200"
          type="email"
          name="email"
          required
          placeholder="you@example.com"
        />
      </label>
    </div>
    <label class="text-sm text-slate-600">
      Phone
      <input
        class="mt-2 w-full rounded-lg border-slate-200"
        type="tel"
        name="phone"
        placeholder="Optional"
      />
    </label>
    <label class="text-sm text-slate-600">
      Message
      <textarea
        class="mt-2 w-full rounded-lg border-slate-200"
        name="message"
        rows={6}
        required
        placeholder="Tell us how we can help"
      ></textarea>
    </label>
    <button
      class="inline-flex items-center justify-center rounded-full bg-orange-500 px-6 py-3 text-sm font-semibold text-white transition hover:bg-orange-400"
      type="submit"
    >
      Send message
    </button>
  </form>
</div>
