---
interface TestimonialItem {
    name: string;
    quote: string;
}

interface Props {
    items: TestimonialItem[];
}

const { items } = Astro.props;
---

<div class="grid gap-6 md:grid-cols-2">
    {
        items.map(item => (
            <figure class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
                <blockquote class="text-sm text-slate-600">
                    “{item.quote}”
                </blockquote>
                <figcaption class="mt-4 text-sm font-semibold text-slate-900">
                    {item.name}
                </figcaption>
            </figure>
        ))
    }
</div>
